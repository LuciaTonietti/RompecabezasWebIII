}
<div class="contenedor">
<div class="form-contenedor-crear">
    <form method="post" asp-action="Crear" asp-controller="Sala">
        <div class="form-group-crear">
            <label asp-for="@Model.NickName">Nombre Usuario</label>
            <input asp-for="@Model.NickName" />
            <span asp-validation-for="@Model.NickName"></span>
        </div>
        <div class="form-group-crear">
            <label asp-for="@Model.CantPieces">Cantidad Piezas</label>
            <select asp-for="@Model.CantPieces">
                <option value="" selected>Seleccionar cantidad</option>
