                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="@Model.LimiteParticipantes" class="text-danger"></span>
        </div>*@
            
        <div class="form-group-crear" id="pin-crear">
            <label asp-for="@Model.Pin">Pin</label>
            <input asp-for="@Model.Pin"/>
            <span asp-validation-for="@Model.Pin"></span>
        </div>
        <div class="form-group-crear-boton">
